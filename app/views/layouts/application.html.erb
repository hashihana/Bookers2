<!DOCTYPE html>
<html>
  <head>
  <title>Bookers</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

 <body class="header">
  <header class="navbar navbar-expand-lg text-light navbar-light bg-dark">
   <div class="container">
     <nav class="navbar-nav mr-auto text-light">
      <a class="navbar-brand" href="/">Bookers</a>
        </nav>
        <nav>
          <ul class="nav navbar-nav">
        <% if user_signed_in? %>
        
       <li>
      <%= link_to user_path(current_user), class:"btn btn-link text-light" do %>
       <i class="fa-solid fas fa-home"></i> <span>Home</span>
      <% end %>
      </li>
       <li>
        <%= link_to users_path,  class:"btn btn-link  text-light" do %>
         <i class="fas fa-users"></i> <span>User</span>
      <% end %>
      </li>
      
        <li>
          <%= link_to books_path,  class:"btn btn-link  text-light" do %>
         <i class="fas fa-book-open"></i> <span>Books</span>
        <% end %>
      </li>

       <li>
        <%= link_to destroy_user_session_path, method: :delete, class:"btn btn-link  text-light" do %>
       <i class="fas fa-sign-out-alt"></i><span>Logout</span>
        <% end %>
      </li>

      <% else %>
      <li>
        <%= link_to root_path, class:"btn btn-link  text-light" do %>
       <i class="fa-solid fas fa-home"></i><span>Home</span>
        <% end %>
      </li>
      
      <li>
        <%= link_to about_path, class:"btn btn-link  text-light" do %>
      <i class="fas fa-link"></i> <span>About</span>
      <% end %>
      </li>

      <li>
        <%= link_to new_user_registration_path, class:"btn btn-link text-light" do %>
        <i class="fas fa-user-plus"></i></i><span>Sign up</span>
        <% end %>
      </li>
      
      <li>
        <%= link_to new_user_session_path, class:"btn btn-link text-light" do %>
         <i class="fas fa-sign-out-alt"></i><span>Log in</span>
         <% end %>
      </li>
    <% end %>
    </ul>
    </nav>
    </div>
     </header>
    <%= yield %>

  
  <footer>
   <div class="container mt-5">
    <div class="row">
     <div class="mx-auto">
    <p>CopyRight Infratop.inc</p>
   </div>
   </div>
   </div>
  </footer>
  
  </body>
</html>
